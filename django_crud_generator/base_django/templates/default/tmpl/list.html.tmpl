{% extends 'base.html' %}
{% load static %}
{% load form_utils %}
{% block content %}
    <div id="top" class="row">
        <div class="col-sm-3">
            <h2> {{ model_name_plural }}</h2>
        </div>
        <div class="col-sm-3 col-sm-offset-6">
            <a href="{% url '${model_prefix}_create' %}" class="btn btn-primary pull-right h2"><i
                    class="fa fa-plus"></i> Add ${model_name}
            </a>
        </div>
    </div> <!-- /#top -->
    <hr/>
    <form id="advancedForm" method="get" action="{% url '${model_prefix}_list' %}">
        {% csrf_token %}
        <div class="row">
            <div class="col-sm-12">

                {{ filter.form.as_p }}
                 <button type="button" class="btn btn-default" id="clear"><i class="fa fa-close"></i> Clear</button>


            </div>
        </div>
        <hr/>
        <div id="list" class="row">
            <div class="col-md-12">
                <table id="table" class="table table-striped" cellspacing="0" cellpadding="0">
                    <thead>
                    <tr>
                        ${header_table}
                        <th class="actions">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>

        </div> <!-- /#list -->
    </form>
    <script type="text/javascript">

    $(document).ready(function () {

            function getData() {
                var formData = $('#advancedForm').serializeArray().reduce(function (obj, item) {
                    obj[item.name] = item.value;
                    return obj;
                }, {});
                return formData;
            }

            $('#${model_name_lower}_link').addClass('active');
            var table = $('#table').DataTable({
            "processing": true,
                "serverSide": true,
                "ajax": "{% url '${model_prefix}_list_json' %}",
                "ajax": {
                    "url": "{% url '${model_prefix}_list_json' %}",
                    "data": function (d) {
                        return $.extend({}, d, getData());
                    }
                },
                columnDefs: [
                    {
                        targets: -1,
                        data: 'id',
                        "render": function (data, type, row, meta) {
                            return '<a href="/${url_pattern}/' + row[0] + '/"><i\n' +
                                '                                    class="fa fa-eye"></i></a>&nbsp;&nbsp;' +
                                '<a href="/${url_pattern}/'+row[0]+'/delete/"> <i\n' +
                                '                                    class="fa fa-close"></i></a>';
                        }
                    }
                ],
                order: [[0, "desc"]],
                "language": {
                    "lengthMenu": "Exibir _MENU_ registros por página",
                    "zeroRecords": "Nenhum item encontrado",
                    "info": "Mostrando página _PAGE_ de _PAGES_",
                    "infoEmpty": "Nenhum registro disponível",
                    "emptyTable": "Sem dados disponíveis na tabela",
                    "infoFiltered": "(filtrado do total de _MAX_ registros)",
                    "thousands": ".",
                    "loadingRecords": "Carregando...",
                    "processing": "Processando...",
                    "search": "Buscar:",
                    "paginate": {
                        "first": "Primeiro",
                        "last": "Último",
                        "next": "Próximo",
                        "previous": "Anterior"
                    },
                    "aria": {
                        "sortAscending": ": ativar para classificar a coluna ascendente",
                        "sortDescending": ": ativar para classificar a coluna descendente"
                    }
                }
            });

            $('input').on('keyup', function () {
                table.search('').draw();
            });

            $('#clear').click(function (){
                $("form")[0].reset();
                table.search('').draw();
            });

        });
    </script>

{% endblock %}
